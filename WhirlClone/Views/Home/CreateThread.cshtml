@model Thread

@{
    ViewData["Title"] = "Create Thread";
}
<h1>@ViewData["Title"]</h1>

<p>Thread creation page.</p>

<form asp-controller="Home" asp-action="PostThread" method="post" class="form-horizontal">
    Name: <textarea asp-for="Name"></textarea>
    TopicId: <textarea asp-for="TopicId"></textarea>
    <input type="submit" value="Post" />
</form>